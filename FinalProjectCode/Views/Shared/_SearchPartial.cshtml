@model IEnumerable<Product>

@if(Model != null){
@foreach (Product product in Model)
{
             <li style="list-style:none; margin-bottom:20px">
            <a href="#" style="text-decoration:none;" class="d-flex justify-content-between align-items-center">
                <img style="width:100px;" src="~/assets/img/@product.MainImage" />
                <p style="color: black;">@product.Title</p>
                <p style="color: black;" class="price">$@(product.DiscountedPrice > 0 ? product.DiscountedPrice : product.Price)</p>
                            </a>
                                            </li >
}
}
else{
    <li>Notfound</li>
}